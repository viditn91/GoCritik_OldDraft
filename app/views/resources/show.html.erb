<div class="page-header">
  <h1>Showing <%= ResourceName %></h1>
</div>

<dl class="dl-horizontal">
  <% Field.all.each do |field| %>
    <dt><strong><%= field.display_name %>:</strong></dt>
    <dd><%= @resource.send field.name %></dd>
    <% end %>
</dl>

<div class="form-actions">
  <%= link_to 'Back', resources_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_resource_path(@resource), :class => 'btn' %>
  <%= link_to 'Destroy', resource_path(@resource), :method => 'delete',
              :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %>
</div>